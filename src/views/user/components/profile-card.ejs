<a href="<%= github_url %>">
  <div
    class="rounded bg-white shadow-md max-w-80 transition duration-150 ease-out hover:ease-in"
  >
    <div
      class="rounded-t flex bg-gradient-to-b from-violet-800 to-violet-900 shadow-md"
    >
      <img src="<%= avatar_url %>" class="rounded w-24 h-24 mr-4" />
      <div class="flex flex-col pr-6 pt-4 rounded-br-lg">
        <div class="text-violet-100 text-xl font-semibold"><%= name %></div>
        <div class="text-violet-400 text-md font-normal"><%= login %></div>
      </div>
    </div>

    <div class="px-6 py-4"><%= bio %></div>
  </div>
</a>
