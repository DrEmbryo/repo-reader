<div class="rounded overflow-hidden bg-white min-w-80">
  <div>
    <div
      class="text-center text-violet-100 bg-gradient-to-b from-violet-800 to-violet-900 px-6 py-4"
    >
      Follows
    </div>
    <% following.forEach(function(user) { %>
    <div
      class="flex items-center px-6 py-4 border-t bg-gradient-to-b from-white to-white hover:from-stone-100 hover:shadow-inner"
    >
      <img src="<%= user.avatar_url%>" class="h-10 w-10 rounded mr-2" />
      <div><%= user.login %></div>
    </div>
    <% }); %>
  </div>
</div>
